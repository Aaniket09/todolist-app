<%- include("header") -%>

<div class="box" id="heading">
  <h1> <%= listTitle %> </h1>
</div>

<div class="box">
  <% newListItems.forEach(function(item) { %>
    <form action="/delete-newlist" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
        <p> <a href="/<%= item.name %>" ><%= item.name %></a> </p>
      </div>
      <input type="hidden" name="listName" value="<%= item.name %>">
    </form>
  <% }) %>

  <form class="item" action="/add" method="post">
    <input type="text" name="newItem" placeholder="New List:" autocomplete="off">
    <button class="btn-add" type="submit" name="list">+</button>
  </form>
</div>

<%- include("footer") -%>
